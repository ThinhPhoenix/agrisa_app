{
    "expo": {
        "name": "Agrisa",
        "slug": "agrisa",
        "version": "1.1.2",
        "orientation": "portrait",
        "icon": "./assets/images/agrisa.png",
        "scheme": "agrisa",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "splash": {
            "image": "./assets/images/Logo/agrisa.png",
            "resizeMode": "contain",
            "backgroundColor": "#059669"
        },
        "platforms": ["ios", "android"],
        "ios": {
            "supportsTablet": true,
            "infoPlist": {
                "NSCameraUsageDescription": "Agrisa cần quyền truy cập camera",
                "NSLocationWhenInUseUsageDescription": "Agrisa cần quyền vị trí để xác định tọa độ",
                "NSFaceIDUsageDescription": "Agrisa cần quyền sử dụng Face ID để xác thực người dùng",
                "NSPhotoLibraryUsageDescription": "Agrisa cần quyền truy cập thư viện ảnh để người dùng có thể chọn ảnh",
                "NSPhotoLibraryAddUsageDescription": "Agrisa cần quyền lưu ảnh vào thư viện của thiết bị",
                "UIBackgroundModes": [
                    "fetch",
                    "remote-notification",
                    "processing"
                ]
            },
            "bundleIdentifier": "com.agrisa.Agrisa"
        },
        "android": {
            "googleServicesFile": "./google-services.json",
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/agrisa.png",
                "backgroundColor": "#ffffff"
            },
            "package": "com.agrisa.Agrisa",
            "permissions": [
                "android.permission.CAMERA",
                "android.permission.RECORD_AUDIO",
                "android.permission.ACCESS_FINE_LOCATION",
                "android.permission.ACCESS_COARSE_LOCATION",
                "android.permission.USE_BIOMETRIC",
                "android.permission.USE_FINGERPRINT",
                "android.permission.INTERNET",
                "android.permission.ACCESS_NETWORK_STATE"
            ],
            "intentFilters": [
                {
                    "action": "VIEW",
                    "autoVerify": true,
                    "data": [
                        {
                            "scheme": "agrisa",
                            "host": "payment"
                        }
                    ],
                    "category": ["BROWSABLE", "DEFAULT"]
                }
            ]
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/Logo/Agrisa_Logo.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/Logo/Agrisa_Logo.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#fbe9a8"
                }
            ],
            [
                "expo-build-properties",
                {
                    "android": {
                        "minSdkVersion": 26,
                        "compileSdkVersion": 35,
                        "targetSdkVersion": 34,
                        "kotlinVersion": "2.0.20",
                        "enableProguardInReleaseBuilds": false,
                        "enableHermes": true,
                        "usesCleartextTraffic": true,
                        "enableMinifyInReleaseBuilds": false
                    },
                    "ios": {
                        "deploymentTarget": "16.0"
                    }
                }
            ],
            [
                "react-native-vision-camera",
                {
                    "cameraPermissionText": "Agrisa cần quyền truy cập camera"
                }
            ],
            "expo-font",
            "expo-web-browser",
            [
                "expo-local-authentication",
                {
                    "faceIDPermission": "Cho phép Agrisa sử dụng Face ID"
                }
            ],
            [
                "expo-location",
                {
                    "locationAlwaysAndWhenInUsePermission": "Agrisa cần quyền truy cập vị trí để xác định tọa độ"
                }
            ]
        ],
        "experiments": {
            "typedRoutes": false
        },
        "extra": {
            "router": {
                "origin": false
            },
            "eas": {
                "projectId": "469aa2db-57cb-4365-9663-2b2b8dc2eaf8"
            }
        },
        "owner": "pass-fpt",
        "projectId": "469aa2db-57cb-4365-9663-2b2b8dc2eaf8"
    }
}
