{
  "expo": {
    "name": "Agrisa",
    "slug": "agrisa",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Logo/Agrisa_Logo.png",
    "scheme": "agrisa",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": ["ios", "android"],
    "ios": {
      "supportsTablet": true,
      
      "infoPlist": {
        "NSCameraUsageDescription": "Agrisa cần quyền truy cập camera",
        "NSLocationWhenInUseUsageDescription": "Agrisa cần quyền vị trí để xác định tọa độ",
        "NSFaceIDUsageDescription": "Agrisa cần quyền sử dụng Face ID để xác thực người dùng"

      },
      "bundleIdentifier": "com.tnhaan.agrisa"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Logo/Agrisa_Logo.png",
        "backgroundColor": "#fbe9a8"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "package": "com.tnhaan.agrisa"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/Logo/Agrisa_Logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/Logo/Agrisa_Logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#fbe9a8"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 26,
            "compileSdkVersion": 35,
            "targetSdkVersion": 34,
            "kotlinVersion": "2.0.20",
            "enableProguardInReleaseBuilds": false,
            "enableHermes": true,
            "usesCleartextTraffic": true
          },
          "ios": {
            "deploymentTarget": "16.0"
          }
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "Agrisa cần quyền truy cập camera"
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Cho phép Agrisa sử dụng Face ID"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Agrisa cần quyền truy cập vị trí để xác định tọa độ"
        }
      ]
    ],
    
    "experiments": {
      "typedRoutes": false
    },
    "extra": {
      "apiUrl": "process.env.EXPO_PUBLIC_API_URL",
      "geminiApiKey": "process.env.EXPO_PUBLIC_GEMINI_KEY",
      "router": {},
      "eas": {
        "projectId": "947c952c-e2b2-4317-9d0c-cf656fbc0287"
      }
    },
    "owner": "agrisa-platform"
  }
}
